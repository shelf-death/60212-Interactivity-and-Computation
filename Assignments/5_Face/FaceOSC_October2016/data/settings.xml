<faceosc>
	<!-- to use a default value, leave the tag commented out -->

	<!-- choose the input source, set useCamera to 0 to use a movie -->
	<source>
		<useCamera>1</useCamera>
	</source>

	<!-- camera input settings -->
	<camera>
		<device>0</device><!-- 1 for webcam, 0 for livefeed -->
		<!-- <framerate>30</framerate> 

		1080 X 1920
		540  X 960
	-->
		<width>960</width>
		<height>720</height>
	</camera>

	<!-- movie input settings -->
	<movie>
		<!--
			the file should be a full path ie /User/yourusername/myMovie.mov or you
			can use a relative path with the home folder ~/myMovie.mov
		-->
		<filename>testScreen_720.mov</filename>
		<volume>0</volume> <!-- volume is 0 - 1.0 -->
		<!--
			speed is -16 - 16
			1.0 is normal speed, -1.0 is reverse, 2.0 is double speed, etc
		-->
		<speed>1.0</speed> 
	</movie>

	<!-- face tracker settings -->
	<face>
		<!-- <scale>1</scale> -->
		<!-- <iterations>5</iterations> -->
		<!-- <clamp>3</clamp> -->
		<!-- <tolerance>.01</tolerance> -->
		<!-- <attempts>1</attempts> -->
		<!-- 
			drawMesh is a bool, 0 or 1
			1 by default
		-->
		<drawMesh>0</drawMesh>
	</face>

	<!-- osc output settings -->
	<osc>
		<host>localhost</host>
		<port>8338</port>
	</osc>

<FaceOSC>
		<pose>0</pose>
		<gesture>0</gesture>
		<raw>1</raw>
		<normalize_raw>0</normalize_raw>
	</FaceOSC>
</faceosc>
